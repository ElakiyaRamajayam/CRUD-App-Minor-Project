<!DOCTYPE html>
<html lang="en">
<head>
  <title>Edit Student</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">

  <h4>Edit Student</h4>
  <form action="/update/<%= student._id %>" method="post" class="mb-4">
    <div class="mb-3">
      <label for="rollNo">Roll No:</label>
      <input type="text" class="form-control" name="rollNo" id="rollNo" value="<%= student.rollNo %>" required>
    </div>

    <div class="mb-3">
      <label for="name">Name:</label>
      <input type="text" class="form-control" name="name" id="name" value="<%= student.name %>" required>
    </div>

    <div class="mb-3">
      <label for="degree">Degree:</label>
      <input type="text" class="form-control" name="degree" id="degree" value="<%= student.degree %>" required>
    </div>

    <div class="mb-3">
      <label for="city">City:</label>
      <input type="text" class="form-control" name="city" id="city" value="<%= student.city %>" required>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a href="/" class="btn btn-secondary">Cancel</a>
  </form>

  <hr>
  <h4>All Students</h4>
  <table class="table table-striped">
    <thead class="table-dark">
      <tr>
        <th>Roll No</th>
        <th>Name</th>
        <th>Degree</th>
        <th>City</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% students.forEach(function(std) { %>
        <tr>
          <td><%= std.rollNo %></td>
          <td><%= std.name %></td>
          <td><%= std.degree %></td>
          <td><%= std.city %></td>
          <td>
            <a href="/edit/<%= std._id %>" class="btn btn-warning btn-sm">Edit</a>
            <a href="/delete/<%= std._id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</a>
          </td>
        </tr>
      <% }); %>
    </tbody>
  </table>

</div>
</body>
</html>
